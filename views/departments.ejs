<!DOCTYPE html>
<html>
<head>
  <title>Departments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5">

  <h1 class="mb-4">Departments</h1>

  <!-- Add Department Form -->
  <form action="/departments" method="POST" class="row g-3 mb-4">
    <div class="col-md-5">
      <input type="text" name="name" class="form-control" placeholder="Department Name" required>
    </div>
    <div class="col-md-5">
      <input type="text" name="location" class="form-control" placeholder="Location" required>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary w-100">Add</button>
    </div>
  </form>

  <!-- Department Table -->
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (departments.length > 0) { %>
        <% departments.forEach(dept => { %>
          <tr>
            <td><%= dept.name %></td>
            <td><%= dept.location %></td>
            <td>
              <!-- Update -->
              <form action="/departments/<%= dept._id %>?_method=PUT" method="POST" class="d-inline">
                <input type="text" name="name" value="<%= dept.name %>" required>
                <input type="text" name="location" value="<%= dept.location %>" required>
                <button class="btn btn-sm btn-warning">Update</button>
              </form>

              <!-- Delete -->
              <form action="/departments/<%= dept._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="3">No departments found</td></tr>
      <% } %>
    </tbody>
  </table>

  <a href="/" class="btn btn-secondary">Back to Home</a>

</body>
</html>
